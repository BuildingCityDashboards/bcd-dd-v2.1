extends layout

block append head
  link(rel='stylesheet', href='/stylesheets/themes/health/dc.css')
  link(rel='stylesheet', href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css')
  link(rel='stylesheet', href='/stylesheets/themes/health/marker_cluster_modified.css')
  link(rel='stylesheet', href='/stylesheets/themes/leaflet-chart.css')
  //append this for text styling e.g. align-justify
  //link(rel='stylesheet', href='/stylesheets/text-style.css') 

block navigation
  +navbar("navbar navbar-expand-lg bg-dark fixed-top","/","Dublin Dashboard", "Themes")
  //- include component/side_nav

block content
  .content.bg-dark-blue
    .container
      header.mt-5
        .row
          .col-md-12
            h1= title
            p.header__lead <b>Themes</b> contain singular pieces of information for learning about 
              |Dublin, explained simply. 
            p This page contains Dublin Dashboard data arranged 
              |thematically as: 
              |<b>Transport</b>, <b>Environment</b>, <b>Economy</b>, 
              |<b>Housing</b>, <b>Education</b>, <b>Health</b>, and <b>Demographics</b>.
              |The information presented 
              |here may be sourced from dynamic and/or real-time data 
              |<img height='15px' width='15px' src='/images/clock-circular-outline-w.svg'>
              |or from more static, historical sources 
              |<img height='15px' width='15px' src='/images/calendar-w.svg'> .
              |For deeper data exploration, see our 
              |<a href="../queries"> Queries</a> and <a href="../tools"> Tools</a>.

    .subnav
      +subnavbar("bcd-nav")
    section.bg-dark-blue.pt-5
      .position-anchor#transport
      .wrap
        .container
          include themes/themes_transport_charts

    section.bg-dark-blue.pt-5
      .position-anchor#environment
      .wrap
        .container
          include themes/themes_environment_charts

    section.bg-dark-blue.pt-5
      .position-anchor#housing
      .wrap
        .container
          include themes/themes_housing_charts

    #economy.position-anchor.section-header.bg-dark-blue
      .wrap
        .container
          include themes/themes_economy_charts

    section#education.section-header.bg-dark-blue.hidden 
      .wrap
        .container
          include themes/themes_education_charts

    section#health.section-header.bg-dark.hidden 
      .wrap
        .container
          include themes/themes_health_charts

    section.bg-dark-blue.pt-5 
      .position-anchor#demographics
      .wrap
        .container
          include themes/themes_demographics_charts

